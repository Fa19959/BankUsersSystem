@inherits LayoutComponentBase

<MudThemeProvider/>

<MudLayout>

    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudSpacer />
        <MudIconButton Color="Color.Inherit" Link="https://github.com/MudBlazor/MudBlazor" Target="_blank">
            <img src="img/PersonalPhoto.jpg" alt="Menu" style="width: 24px; height: 24px;" />
        </MudIconButton>
    
    </MudAppBar>

    <MudDrawer @bind-Open="@open" Elevation="1">
        <NavMenu/>
    </MudDrawer>

    <MudMainContent>
        @Body
    </MudMainContent>

</MudLayout>


@code {
    bool open = false;

    void ToggleDrawer()
    {
        open = !open;
    }
}
